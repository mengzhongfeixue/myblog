extends ../layout

append css
  link(rel='stylesheet', href='/stylesheets/admin.css')
  link(rel='stylesheet',href='https://cdn.bootcss.com/font-awesome/5.10.2/css/all.min.css')

block main
  block header
    nav.navbar.navbar-inverse.navbar-fixed-top
          .container-fluid
            .navbar-header
              button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
              a.navbar-brand(href='#') NODE后台管理系统
            #navbar.navbar-collapse.collapse
              ul.nav.navbar-nav.navbar-right
                li
                  a(href='#') 
                    i.fa.fa-unlock-alt
                    | &nbsp;&nbsp;注销
                li
                  a(href='#') 
                    i.fa.fa-cog
                    | &nbsp;&nbsp;设置
                li
                  a(href='#') 
                    i.fa.fa-question
                    | &nbsp;&nbsp;帮助
              form.navbar-form.navbar-right(method='post',action='/admin/articles/search')
                input.form-control(type='text',name='keyword' placeholder='请输入文章标题...')

  block content
    .container-fluid
          .row
            .col-sm-3.col-md-2.sidebar
              block sidebar
                ul.nav.nav-sidebar
                  li(class={active:menu=='articles'})
                    a(href='/admin/articles')
                      i.fa.fa-th-list
                      | &nbsp;&nbsp;所有文章
                      span.sr-only (current)
                  li(class={active:menu=='categories'})
                    a(href='/admin/categories') 
                      i.fa.fa-th-list
                      | &nbsp;&nbsp;文章分类
                  li(class={active:menu=='authors'})
                    a(href='/admin/authors') 
                      i.fa.fa-list
                      |&nbsp;&nbsp;文章作者
                ul.nav.nav-sidebar
                  li(class={active:menu=='administrator'})
                    a(href='admin/administrator') 
                      i.fa.fa-wrench
                      | &nbsp;&nbsp;管理员管理
                  
            .col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
              block section


 
  