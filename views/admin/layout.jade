extends ../layout

append css
  link(rel='stylesheet', href='/stylesheets/admin.css')
  link(rel='stylesheet',href='https://cdn.bootcss.com/font-awesome/5.10.2/css/all.min.css')

block main
  block header
    nav.navbar.navbar-inverse.navbar-fixed-top
          .container-fluid
            .navbar-header
              button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
              a.navbar-brand(href='#') 后台管理系统
            #navbar.navbar-collapse.collapse
              ul.nav.navbar-nav.navbar-right
                li
                  a(href='#') 
                    i.fa.fa-unlock-alt
                    | &nbsp;&nbsp;注销
                li
                  a(href='#') 
                    i.fa.fa-cog
                    | &nbsp;&nbsp;设置
                li
                  a(href='#') 
                    i.fa.fa-question
                    | &nbsp;&nbsp;帮助
              form.navbar-form.navbar-right
                input.form-control(type='text', placeholder='请输入内容...')

  block content
    .container-fluid
          .row
            .col-sm-3.col-md-2.sidebar
              block sidebar
                ul.nav.nav-sidebar
                  li.active
                    a(href='/admin/posts/list')
                      i.fa.fa-th-list
                      | &nbsp;文章列表
                      span.sr-only (current)
                  li
                    a(href='/admin/posts/add') 
                      i.fa.fa-plus
                      | &nbsp;添加文章
                  li
                    a(href='/admin/categories/list') 
                      i.fa.fa-th-list
                      | &nbsp;分类列表
                  li
                    a(href='/admin/categories/add') 
                      i.fa.fa-plus
                      |&nbsp;添加分类
                ul.nav.nav-sidebar
                  li
                    a(href='admin/users/password') 
                      i.fa.fa-wrench
                      | &nbsp;修改密码
                  
            .col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
              block section
 
  